.card-product
	display flex
	flex-direction column
	align-items center
	width 286px
	height 592px
	padding 19px 10px 29px
	border 1px solid #e3e3e3
	background-color #fff
	
	&__title
		text-align center
		color $card-text
		font-family 'Lato', sans-serif
		font-size 24px
		font-weight 500
		line-height 24.25px
	
	&__image
		display block
		text-align center
		max-width 266px
		min-height 213px
		line-height 213px
		img
			vertical-align middle
	
	&__price
		padding-bottom 18px
		text-align center
		color #515461
		font-family "Montserrat", sans-serif
		font-size 29px
		font-weight 400
	
	&__description
		text-align center
		color $card-text
		font-size 16px
		font-weight 400
		line-height 19.94px

	&__button
		display block
		width 203px
		height 40px
		margin 20px 0 0
		border-radius 20px
		border 3px solid $main-color
		text-align center
		color #2c2c2c
		background-color transparent
		
		font-size 18px
		font-weight 700
		text-transform uppercase

	&__counter
		margin auto 0 0
	
	&__count
		padding-left 14px
		color #1c1b1b
		font-family "Helvetica Neue Cyr Thin", sans-serif
		font-size 12px
		font-weight 400

.product-count
	display inline-block
	height 30px
	padding 0 18px
	border-radius 15px
	border 1px solid #cfcfcf
	background-color #fff
	
	&__but
		color $card-text
		font-size 14px
		font-weight 500
		cursor pointer

	&__number
		width 42px
		border none
		background-color transparent
		color $card-text
		text-align center
		font-size 14px
		font-weight 500
		-moz-appearance textfield
		&::-webkit-outer-spin-button
		&::-webkit-inner-spin-button
			-webkit-appearance none
			margin 0
			
		